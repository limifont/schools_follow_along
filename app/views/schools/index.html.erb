<h1>All Schools</h1>
<br />


<% if @schools.any? %>
  <!-- loop through and display links to each one -->
  <ul>
      <% @schools.each do |school| %>
        <li>
          <%= link_to  school.name, school_path(school) %>
        </li>
      <% end %>
  </ul>
<% else %>
  <h3> No schools found. Please create one!</h3>
<% end %>


<%= link_to 'New School', new_school_path %>

